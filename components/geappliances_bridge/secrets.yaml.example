# Example secrets.yaml file for ESPHome configuration
# Copy this to secrets.yaml in your ESPHome config directory and fill in your values

# WiFi credentials
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# Fallback AP (when WiFi fails)
ap_password: "FallbackHotspotPassword"

# API password for Home Assistant
api_password: "YourAPIPassword"

# OTA (Over The Air) update password
ota_password: "YourOTAPassword"

# MQTT Broker settings
mqtt_broker: "192.168.1.100"  # Your MQTT broker IP
mqtt_username: "mqtt_user"
mqtt_password: "mqtt_password"
